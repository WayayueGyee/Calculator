<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="white_button_text_appearance">
        <item name="android:textColor">#3A4E89</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="white_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/white_button_style</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAppearance">@style/white_button_text_appearance</item>
    </style>

    <style name="blue_button_text_appearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="blue_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/blue_button_style</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAppearance">@style/blue_button_text_appearance</item>
    </style>

    <style name="app_name_style">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#373A37</item>
        <item name="android:fontFamily">@font/museo700</item>
    </style>
</resources>